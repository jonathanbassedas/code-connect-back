root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
tab_width= 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
quote_type = single

[*.json]
quote_type = single

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.yml]
quote_type = single
